  </div>

  <div class="flex flex-col lg:flex-row items-center">
    <div class="lg:w-1/2 lg:px-10">
      <div class="pt-10 flex lg:flex-row flex-col gap-3 justify-center mx-10">
        <%= link_to root_path do %>
          <div class="btn-primary mb-10">
            VIEW PROGRAMS
          </div>
        <% end %>

        <%= link_to root_path do %>
          <div class="btn-primary mb-10">
            HOME PAGE
          </div>
        <% end %>
      </div>

    </div>
    
    <div class="lg:w-1/2">
      <%= image_tag "pitcairn-flight-student-and-cfi-in-cessna.webp", class: "lg:w-3/4", alt: "Student and CFI inside Cessna"%>
    </div>
  </div>

</main>

