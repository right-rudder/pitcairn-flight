<script>
  document.getElementById('contact-button').addEventListener('click', function() {
    const contactFrame = document.getElementById('contactframe');

    if (contactFrame) {
      contactFrame.scrollIntoView({ behavior: 'smooth' });
    }
  });
  document.getElementById('learn-more-button').addEventListener('click', function() {
    const commercialContent = document.getElementById('rental-content');

    if (commercialContent) {
      const offset = -15; // Adjust the offset as needed
      const targetPosition = commercialContent.offsetTop + offset;
      window.scrollTo({ top: targetPosition, behavior: 'smooth' });
    }
  });
    document.getElementById('learn-more-button-mobile').addEventListener('click', function() {
    const commercialContent = document.getElementById('rental-content');

    if (commercialContent) {
      const offset = 120; // Adjust the offset as needed
      const targetPosition = commercialContent.offsetTop + offset;
      window.scrollTo({ top: targetPosition, behavior: 'smooth' });
    }
  });
</script>